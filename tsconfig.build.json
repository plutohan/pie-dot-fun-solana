{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "skipLibCheck": true,
    "declaration": true, // This generates .d.ts files
    "declarationMap": true, // This generates source maps for .d.ts files
    "sourceMap": true // This generates source maps for .js files
  },
  "include": ["sdk/**/*"],
  "exclude": ["node_modules", "tests", "target", "dist", "migrations"]
}
